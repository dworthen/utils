{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true
  },
  "exclude": [
    "node_modules",
    "tmp"
  ],
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "experimentalResolver": true
  }
}
