{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**/*"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "clean": {
      "outputs": []
    },
    "start": {
      "outputs": []
    },
    "test": {
      "outputs": [],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx"
      ]
    },
    "docs": {
      "outputs": [
        "api",
        "docs"
      ],
      "dependsOn": [
        "build",
        "test"
      ],
      "inputs": [
        "src/**/*"
      ]
    }
  }
}
