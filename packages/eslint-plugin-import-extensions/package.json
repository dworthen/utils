{
  "name": "@d-dev/eslint-plugin",
  "version": "1.0.0",
  "description": "plugin for enforcing esm or cjs file extensions in imports.",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "jest",
    "clean": "shx rm -rf ./dist",
    "build:types": "tsc --emitDeclarationOnly",
    "build:cjs": "esbuild ./src/index.ts --bundle --external:\"./node_modules/*\" --sourcemap --platform=node --format=cjs --target=node16 --outfile=./dist/cjs/index.cjs",
    "build:esm": "esbuild ./src/**/*.ts --sourcemap --platform=node --format=esm --target=node16 --outdir=./dist/esm",
    "build": "run-p build:types build:cjs build:esm",
    "docs": "api-extractor run --local"
  },
  "author": "Derek Worthen <worthend.derek@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@sinclair/typebox": "^0.25.1",
    "micromatch": "^4.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@microsoft/api-extractor": "^7.33.5",
    "@types/eslint": "^8.4.9",
    "@types/jest": "^29.2.0",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^18.11.7",
    "@typescript-eslint/parser": "^5.41.0",
    "@typescript-eslint/utils": "^5.41.0",
    "babel-jest": "^29.2.2",
    "esbuild": "^0.15.12",
    "eslint": "^8.26.0",
    "jest": "^29.2.2",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.4",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "eslint": "^8.26.0"
  }
}
